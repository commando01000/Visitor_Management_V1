@model Visitor_Management_Portal.ViewModels.OrganizationSetup.BuildingWithZonesAndMeetingAreasDetailsVM

<style>

    table th,
    table td {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        text-align: left !important;
        background-color: white !important;
    }

    .userName {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        text-align: left !important;
        background-color: white !important;
        font-weight: 600;
        font-size: 13px;
    }

    .zones_topSection .search-bar {
        flex-grow: 1;
        display: flex;
        align-items: center;
        border: 1px solid #E6E6E8;
        border-radius: 5px;
        padding: 5px 10px;
        background: #FFFFFF;
        border-radius: 10px;
        width: 20%;
    }

    #zonesTable_wrapper {
        overflow-x: auto;
    }


    #zonesTable {
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;
    }

    #zonesTable_wrapper .dataTables_scrollBody {
        overflow-x: auto;
        max-width: 100%;
        display: block;
        -webkit-overflow-scrolling: touch;
    }


    #zonesTable th {
        font-weight: bold;
    }

    i {
        cursor: pointer;
    }

    #zonesTable th, #zonesTable td {
        /*        width: 25%; */
        text-align: center;
        word-wrap: break-word;
    }

    .svg-btn {
        width: 45px;
        height: 45px;
        background-color: #1E3A8A;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .zones_topSection .search-bar input {
        flex-grow: 1;
        border: none;
        outline: none;
        padding-left: 5px;
        font-size: 14px;
    }

    #zonesTable_filter label {
        display: none;
    }

    .text-content-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-direction: column;
    }
    /* Switch Toggle Btn */
    .switch {
        font-size: 10px;
        position: relative;
        display: inline-block;
        width: 40px;
        height: 22px;
    }

        .switch input {
            opacity: 1;
            width: 0;
            height: 0;
        }

    /* The slider */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #fff;
        transition: .4s;
        border-radius: 30px;
        border: 1px solid #ccc;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 1.4em;
            width: 1.4em;
            border-radius: 50%;
            left: 2px;
            top: 2px;
            background-color: white;
            box-shadow: 0 2px 5px #999999;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #5fdd54;
        border: 1px solid transparent;
    }

        input:checked + .slider:before {
            transform: translateX(18px);
        }

    .location, .userProfile {
        cursor: pointer;
    }

    input.form-control {
        background-image: none;
        background-repeat: no-repeat;
        background-size: 20px;
        background-position: 10px center;
        padding-left: 40px;
        opacity: 0.7;
    }

    input::placeholder {
        opacity: 0.7;
    }

    .modal-content label {
        font-weight: 500
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .not-allowed-content, .not-allowed-content * {
        cursor: not-allowed !important;
    }
</style>

<div class="zones-section-container">
    <!-- TOP Section -->
    <div class="zones_topSection d-flex align-items-baseline justify-content-lg-end justify-content-center  mb-4">
        <div class="d-flex gap-2">
            <!-- DataTable Search -->
            <div class="search-bar">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="19.999" viewBox="0 0 20 19.999">
                    <g id="search" opacity="0.5">
                        <path id="Path_9" data-name="Path 9" d="M9.166,18.332a9.166,9.166,0,1,1,9.166-9.166A9.177,9.177,0,0,1,9.166,18.332Zm0-16.666a7.5,7.5,0,1,0,7.5,7.5A7.508,7.508,0,0,0,9.166,1.667Z" fill="#2f2f2f" />
                        <path id="Path_10" data-name="Path 10" d="M22.034,22.867a.831.831,0,0,1-.589-.244l-4-4a.833.833,0,0,1,1.179-1.178l3.995,4a.832.832,0,0,1-.589,1.422Z" transform="translate(-2.868 -2.868)" fill="#2f2f2f" />
                    </g>
                </svg>
                <input type="text" placeholder="Search..." />
            </div>



            <div class="Filter-zones not-allowed svg-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="17" viewBox="0 0 24 17">
                    <g id="filter_1_" data-name="filter (1)" transform="translate(-3 -6.5)">
                        <path id="Path_40799" data-name="Path 40799" d="M17,11H4A1,1,0,0,1,4,9H17a1,1,0,0,1,0,2Zm9,0H22a1,1,0,0,1,0-2h4a1,1,0,0,1,0,2Z" fill="#fff" />
                        <path id="Path_40800" data-name="Path 40800" d="M19.5,13.5A3.5,3.5,0,1,1,23,10,3.5,3.5,0,0,1,19.5,13.5Zm0-5A1.5,1.5,0,1,0,21,10,1.5,1.5,0,0,0,19.5,8.5ZM26,21H13a1,1,0,0,1,0-2H26a1,1,0,0,1,0,2ZM8,21H4a1,1,0,0,1,0-2H8a1,1,0,0,1,0,2Z" fill="#fff" />
                        <path id="Path_40801" data-name="Path 40801" d="M10.5,23.5A3.5,3.5,0,1,1,14,20a3.5,3.5,0,0,1-3.5,3.5Zm0-5A1.5,1.5,0,1,0,12,20,1.5,1.5,0,0,0,10.5,18.5Z" fill="#fff" />
                    </g>
                </svg>
            </div>

            <div class="addzone svg-btn" data-bs-toggle="modal" data-bs-target="#addZoneModel">
                <svg xmlns="http://www.w3.org/2000/svg" id="add" width="24" height="24" viewBox="0 0 24 24">
                    <rect id="Rectangle_11" data-name="Rectangle 11" width="3" height="24" rx="1.5" transform="translate(11)" fill="#fff" />
                    <rect id="Rectangle_12" data-name="Rectangle 12" width="24" height="3" rx="1.5" transform="translate(0 11)" fill="#fff" />
                </svg>
            </div>


        </div>
    </div>

    <!-- DataTable -->
    <table id="zonesTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>
                    Exclude From Office Selection?
                </th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Zones != null && Model.Zones.Count > 0)
            {
                foreach (var zone in Model.Zones)
                {
                    <tr data-id="@zone.Id" data-name="@zone.Name">
                        <td title="@zone.Code">@(!string.IsNullOrEmpty(zone.Code) ? zone.Code : "--")</td>
                        <td title="@zone.Name">@(!string.IsNullOrEmpty(zone.Name) ? zone.Name : "--")</td>
                        <td>
                            <label class="switch not-allowed-content">
                                <input type="checkbox" @(zone.IsExcludeFromOfficeSelection ? "checked" : "") disabled>
                                <span class="slider"></span>
                            </label>
                        </td>
                        <td>
                            <span class="fs-5 link-dark editZone" style="margin-right:1.5rem;"
                                  onclick="editZone(this)"
                                  data-id="@zone.Id" data-code="@zone.Code" data-name="@zone.Name" data-isexclude="@zone.IsExcludeFromOfficeSelection">
                                <i class="fa-solid fa-pencil fs-5"></i>
                            </span>
                            <span class="fs-5 link-dark deleteZone" onclick="deleteZone('@zone.Id')"><i class="fa-regular fa-trash-can"></i></span>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>



</div>

