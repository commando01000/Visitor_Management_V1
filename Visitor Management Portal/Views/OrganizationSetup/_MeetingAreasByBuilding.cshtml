@model List<Visitor_Management_Portal.ViewModels.OrganizationSetup.MeetingAreaVM>

<style>

    table th,
    table td {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        text-align: left !important;
    }

    .userName {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        text-align: left !important;
        background-color: white !important;
        font-weight: 600;
        font-size: 13px;
    }

    .meetingAreas_topSection .search-bar {
        flex-grow: 1;
        display: flex;
        align-items: center;
        border: 1px solid #E6E6E8;
        border-radius: 5px;
        padding: 5px 10px;
        background: #FFFFFF;
        border-radius: 10px;
        width: 20%;
    }

    #meetingAreasTable_wrapper {
        overflow-x: auto;
    }


    #meetingAreasTable {
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;
    }

    #meetingAreasTable_wrapper .dataTables_scrollBody {
        overflow-x: auto;
        max-width: 100%;
        display: block;
        -webkit-overflow-scrolling: touch;
    }


    #meetingAreasTable th {
        font-weight: bold;
    }

    i {
        cursor: pointer;
    }

    #meetingAreasTable th, #meetingAreasTable td {
        /*        width: 25%; */
        text-align: center;
        word-wrap: break-word;
    }

    .svg-btn {
        width: 45px;
        height: 45px;
        background-color: #1E3A8A;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .meetingAreas_topSection .search-bar input {
        flex-grow: 1;
        border: none;
        outline: none;
        padding-left: 5px;
        font-size: 14px;
    }

    #meetingAreasTable_filter label {
        display: none;
    }

    .text-content-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-direction: column;
    }
    /* Switch Toggle Btn */
    .switch {
        font-size: 10px;
        position: relative;
        display: inline-block;
        width: 40px;
        height: 22px;
    }

        .switch input {
            opacity: 1;
            width: 0;
            height: 0;
        }

    /* The slider */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #fff;
        transition: .4s;
        border-radius: 30px;
        border: 1px solid #ccc;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 1.4em;
            width: 1.4em;
            border-radius: 50%;
            left: 2px;
            top: 2px;
            background-color: white;
            box-shadow: 0 2px 5px #999999;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #5fdd54;
        border: 1px solid transparent;
    }

        input:checked + .slider:before {
            transform: translateX(18px);
        }

    .location, .userProfile {
        cursor: pointer;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .not-allowed-content, .not-allowed-content * {
        cursor: not-allowed !important;
    }
</style>

<div class="meetingAreas-section-container">
    <!-- TOP Section -->
    <div class="meetingAreas_topSection d-flex align-items-baseline justify-content-lg-end justify-content-center  mb-4">
        <div class="d-flex gap-2">
            <!-- DataTable Search -->
            <div class="search-bar">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="19.999" viewBox="0 0 20 19.999">
                    <g id="search" opacity="0.5">
                        <path id="Path_9" data-name="Path 9" d="M9.166,18.332a9.166,9.166,0,1,1,9.166-9.166A9.177,9.177,0,0,1,9.166,18.332Zm0-16.666a7.5,7.5,0,1,0,7.5,7.5A7.508,7.508,0,0,0,9.166,1.667Z" fill="#2f2f2f" />
                        <path id="Path_10" data-name="Path 10" d="M22.034,22.867a.831.831,0,0,1-.589-.244l-4-4a.833.833,0,0,1,1.179-1.178l3.995,4a.832.832,0,0,1-.589,1.422Z" transform="translate(-2.868 -2.868)" fill="#2f2f2f" />
                    </g>
                </svg>
                <input type="text" placeholder="Search..." />
            </div>



            <div class="Filter-MeetingAreas svg-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="17" viewBox="0 0 24 17">
                    <g id="filter_1_" data-name="filter (1)" transform="translate(-3 -6.5)">
                        <path id="Path_40799" data-name="Path 40799" d="M17,11H4A1,1,0,0,1,4,9H17a1,1,0,0,1,0,2Zm9,0H22a1,1,0,0,1,0-2h4a1,1,0,0,1,0,2Z" fill="#fff" />
                        <path id="Path_40800" data-name="Path 40800" d="M19.5,13.5A3.5,3.5,0,1,1,23,10,3.5,3.5,0,0,1,19.5,13.5Zm0-5A1.5,1.5,0,1,0,21,10,1.5,1.5,0,0,0,19.5,8.5ZM26,21H13a1,1,0,0,1,0-2H26a1,1,0,0,1,0,2ZM8,21H4a1,1,0,0,1,0-2H8a1,1,0,0,1,0,2Z" fill="#fff" />
                        <path id="Path_40801" data-name="Path 40801" d="M10.5,23.5A3.5,3.5,0,1,1,14,20a3.5,3.5,0,0,1-3.5,3.5Zm0-5A1.5,1.5,0,1,0,12,20,1.5,1.5,0,0,0,10.5,18.5Z" fill="#fff" />
                    </g>
                </svg>
            </div>

            <div class="addMeetingArea svg-btn" data-bs-toggle="modal" data-bs-target="#addMeetingAreaModal">
                <svg xmlns="http://www.w3.org/2000/svg" id="add" width="24" height="24" viewBox="0 0 24 24">
                    <rect id="Rectangle_11" data-name="Rectangle 11" width="3" height="24" rx="1.5" transform="translate(11)" fill="#fff" />
                    <rect id="Rectangle_12" data-name="Rectangle 12" width="24" height="3" rx="1.5" transform="translate(0 11)" fill="#fff" />
                </svg>
            </div>


        </div>
    </div>

    <!-- DataTable -->
    <table id="meetingAreasTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Related Zone</th>
                <th>
                    Available for Visit Requests?
                </th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var area in Model)
                {
                    <tr>
                        <td title="@area.Code">@(!string.IsNullOrEmpty(area.Code) ? area.Code : "--")</td>
                        <td title="@area.Name">@(!string.IsNullOrEmpty(area.Name) ? area.Name : "--")</td>
                        <td title="@area.ZoneName">@(!string.IsNullOrEmpty(area.ZoneName) ? area.ZoneName : "--")</td>
                        <td>
                            <label class="switch not-allowed-content">
                                <input type="checkbox" class="area-toggle"
                                       data-model-id="@area.Id" @(area.AppearInVisitRequests != null && area.AppearInVisitRequests.Value ? "checked" : "") disabled />

                                <span class="slider"></span>
                            </label>
                        </td>
                        <td>
                            <div class="row d-flex justify-content-start">
                                <div class="col-auto align-content-center" title="Edit">
                                    <i onclick="updateArea(this)"
                                       data-id="@area.Id"
                                       data-name="@area.Name"
                                       data-code="@area.Code"
                                       data-zone="@area.ZoneId"
                                       data-Availabilty="@(area.AppearInVisitRequests != null ? area.AppearInVisitRequests.Value : false)"
                                       class="fa-solid fa-pencil fs-5 editUser"
                                       data-bs-toggle="modal"
                                       data-bs-target="#editMeetingAreaModal"></i>
                                </div>
                                <div class="col-auto" title="Delete">
                                    <a class="fs-5 link-dark" onclick="deleteArea('@area.Id')"><i class="fa-regular fa-trash-can"></i></a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

<!-- Add New Meeting Area Modal -->
<div class="modal fade" id="addMeetingAreaModal" tabindex="-1" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document" style="zoom: 90%;">
        <div class="modal-content d-flex align-items-center border-0 rounded-4" style="padding: 20px;">
            <div class="d-flex align-items-center justify-content-between w-100">
                <h6 class="m-0 p-0 w-100 text-center fw-500">Add Meeting Area</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body w-100">
                <input id="meeting-area-building-id" value="@ViewBag.BuildingId" hidden style="display:none" />
                <!-- Meeting Area Name -->
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="my-2">
                            <label for="model-meeting-area-name" class="form-label required">Meeting Area Name</label>
                            <input type="text" class="form-control" id="model-meeting-area-name"
                                   placeholder="Enter Name" style="padding: 10px; border-radius: 8px" />
                        </div>
                    </div>
                </div>

                <!-- Meeting Area Code -->
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="my-2">
                            <label for="model-meeting-area-code" class="form-label">Meeting Area Code</label>
                            <input type="text" class="form-control" id="model-meeting-area-code"
                                   placeholder="Enter Code" style="padding: 10px; border-radius: 8px" />
                        </div>
                    </div>
                </div>



                <!-- Related Zone -->
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="my-2" style=" display: flex; flex-direction: column;">
                            <label class="fw-500 mb-1 form-label required" for="model-related-zone">Related Zone</label>
                            <select id="model-related-zone" name="model-related-zone" class="form-input"
                                    style="padding: 10px; font-size: 1rem; border-radius: 8px;">
                                <option value="">Select Zone</option>
                                @if (ViewBag.AllZones != null)
                                {
                                    foreach (var zone in ViewBag.AllZones)
                                    {
                                        <option value="@zone.Id">@zone.Name</option>
                                    }
                                }
                                <!-- Options for Related Zones -->
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Available for Visit Requests? -->
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="my-2" style=" display: flex; flex-direction: column;">
                            <label for="available-for-visit-requests" class="form-label">Available for Visit Requests?</label>
                            <label class="switch">
                                <input type="checkbox" name="" id="available-for-visit-requests">
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>


            </div>

            <div class="modal-footer border-0 d-flex justify-content-between w-100">
                <button type="button" class="btn"
                        style="width: 100%; background: #1E3A8A; box-shadow: 0px 4px 12px #00000029; border-radius: 4px;
                               font-size: 15px; color: white; padding: 15px;" id="saveMeetingAreaBtn" onclick="saveMeetingArea()">
                    Add
                </button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editMeetingAreaModal" tabindex="-1" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document" style="zoom: 90%;">
        <div class="modal-content d-flex align-items-center border-0 rounded-4" style="padding: 20px;">
            <div class="d-flex align-items-center justify-content-between w-100">
                <h6 class="m-0 p-0 w-100 text-center fw-500">Edit Meeting Area</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body w-100">
                <input id="meeting-area-building-id-up" value="@ViewBag.BuildingId" hidden style="display:none" />
