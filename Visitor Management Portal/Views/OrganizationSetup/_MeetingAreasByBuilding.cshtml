                        </div>
                    </div>
                </div>

                <!-- Meeting Area Code -->
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="my-2">
                            <label for="model-meeting-area-code-up" class="form-label">Meeting Area Code</label>
                            <input type="text" class="form-control" id="model-meeting-area-code-up"
                                   placeholder="Enter Code" style="padding: 10px; border-radius: 8px" />
                        </div>
                    </div>
                </div>



                <!-- Related Zone -->
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="my-2" style=" display: flex; flex-direction: column;">
                            <label class="fw-500 mb-1 form-label required" for="model-related-zone-up">Related Zone</label>
                            <select id="model-related-zone-up" name="model-related-zone" class="form-input"
                                    style="padding: 10px; font-size: 1rem; border-radius: 8px;">
                                <option value="">Select Zone</option>
                                @if (ViewBag.AllZones != null)
                                {
                                    foreach (var zone in ViewBag.AllZones)
                                    {
                                        <option value="@zone.Id">@zone.Name</option>
                                    }
                                }
                                <!-- Options for Related Zones -->
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Available for Visit Requests? -->
                <div class="row gap-3">
                    <div class="col-12">
                        <div class="my-2" style=" display: flex; flex-direction: column;">
                            <label for="available-for-visit-requests" class="form-label">Available for Visit Requests?</label>
                            <label class="switch">
                                <input type="checkbox" name="" id="available-for-visit-requests-up">
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>


            </div>

            <div class="modal-footer border-0 d-flex justify-content-between w-100">
                <button type="button" class="btn"
                        style="width: 100%; background: #1E3A8A; box-shadow: 0px 4px 12px #00000029; border-radius: 4px;
                               font-size: 15px; color: white; padding: 15px;" id="saveMeetingAreaBtn" onclick="updateMeetingArea()">
                    Edit
                </button>
            </div>
        </div>
    </div>
</div>





<!--Delete Meeting Area-->
<div class="modal fade" id="deleteAreaModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="request_area_id" hidden style="display:none;" />
                <p class="mb-0">Are you sure you want to delete this item? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteArea()">Delete</button>
            </div>
        </div>
    </div>
</div>
